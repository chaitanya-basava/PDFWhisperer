{
  "version": 2,
  "name": "pdf-whisperer",
  "builds": [
    {
      "src": "server/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
